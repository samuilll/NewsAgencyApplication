@model NewsAgency.App.Models.Articles.ArticleDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@Html.DisplayNameFor(model => model.Likes)

<div id="like">
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <hr style="border: groove" />
        <dd>
            @*
                @Html.ActionLink("Like", "Like", new { id = Model.Id }, new { @class = "btn btn-info center-block col-md-1" })
            *@
            @if (!Model.IsAlreadyLiked)
            {
                <a data-ajax="true"
                   data-ajax-method="GET"
                   data-ajax-mode="replace"
                   data-ajax-update="#like"
                   id="articleId"
                   name=@Model.Id.ToString()
                   href="/Article/Like"
                   class="btn btn-primary">
                    Like
                </a>
            }
            else
            {
                <a data-ajax="true"
                   data-ajax-method="GET"
                   data-ajax-mode="replace"
                   data-ajax-update="#like"
                   href="/Article/Unlike"
                   class="btn btn-primary">
                    Dislike
                </a>
            }
        </dd>
    </dl>
</div>

