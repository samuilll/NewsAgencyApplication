@using NewsAgency.App.Models.Articles
@model List<NewsAgency.App.Models.Articles.AdminArticleViewModel>
@{
    ViewBag.Title = "All";
}
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
<thead>
<tr>
    <th>
        @Html.ActionLink("Title", "All", new { order = "title" })
    </th>
    <th >
      Author
    </th>
    <th >
        Category
    </th>
    <th >
        Content
    </th>
    <th>
        @Html.ActionLink("CreatedOn","All",new { order = "createdOn"})
    </th>
    <th colspan="2">
        @Html.ActionLink("Create New Article", "Create", null, new {type = "button", @class = "btn btn-success"})
    </th>
</tr>
</thead>
<tbody>
@foreach (AdminArticleViewModel article in Model)
{
    @Html.Partial("_AdminArticleView", article)
}
</tbody>
</table>
