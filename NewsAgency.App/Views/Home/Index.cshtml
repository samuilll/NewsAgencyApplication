@using New.Models
@using NewsAgency.App.Models.DisplayModels.Articles
@using NewsAgency.App.Models.DisplayModels.Categories
@model NewsAgency.App.Models.DisplayModels.Articles.HomeViewModel

<div class="well text-justify text-center col-md-12">
    <span class="text-capitalize text-danger">Most liked categories:</span>
    <hr style="border: groove"/>
    @foreach (ArticleHomeViewModel article in Model.MostPopularArticles)
    {
        @Html.Partial("_ArticleInList", article)
    }
</div>
<div class="text-justify text-capitalize">Latest articles by category:</div>
@foreach (CategoryWithArticlesViewModel categoryWithArticles in Model.LatestArticlesByCategories)
{
    <div class="well text-justify text-center col-md-12">
        <span> @categoryWithArticles.Name:</span>

        @foreach (ArticleHomeViewModel article in categoryWithArticles.LatestArticles)
        {
            @Html.Partial("_ArticleInList", article)
        }
    </div>
}
}